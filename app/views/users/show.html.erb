<h1>User info</h1>

<div class="profile-container"></h3>
  <h3 class="profile-name"><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg" %>

  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<div>Books</div>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
    <%= attachment_image_tag book.user.profile_image, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg" %>
  <% end %>
</div>
<div>
  <p>Title:<%= book.title %></p>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>