<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:"jpeg", fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th>
        <%= link_to user.following.count, follow_users_path(user) %>
      </th>
    </tr>
    <tr>
      <th>followers</th>
      <th>
        <%= link_to user.followers.count, follower_users_path(user) %>
      </th>
    </tr>
  </tbody>
</table>
<div class="row">
  <% if user.id != current_user.id %>
    <% if current_user.following?(user) %>
      <%= link_to user_relationships_path(user), class: "btn btn-info", method: :delete do %>
        フォロー外す
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user), class: "btn btn-success", method: :post do %>
        フォローする
      <% end %>
    <% end %>
  <% end %>
</div>
<div><br></div>
<div class="row">
  <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>
