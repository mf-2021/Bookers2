<h1>New book</h1>
<%= form_with model:@book, url:"/books", local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>

<% end %>

<div>Books</div>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.id) do %>
    <%= attachment_image_tag book.user.profile_image, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg" %>
  <% end %>
</div>
<div>

  <p>Title:<%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>